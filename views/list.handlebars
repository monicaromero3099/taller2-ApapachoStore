
  <div class="top-order"></div>

    <nav>
  Filtro por precio
  <select>
    <option value="" disabled="true" selected="true">Selecciona una opción...</option>
    <option value="60000">Menor a $60</option>
    <option value="700000">Menor a $100</option>
  </select>

  <p>
    <label for="amount">Price range:</label>
    <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
  </p>

  <div id="slider-range"></div>
  <button class="searchbtn">Buscar</button>


  <input type="text" class="search_input">
</nav>
  
  <main class="container">

  <section class="filters">

    <h2 class="filters__title">CATEGORÍA</h2>
      <h3 class="filters__item">Disney</h3>
      <h3 class="filters__item">Apapacho Oficial</h3>
      <h3 class="filters__item">Pixar</h3>
      <h3 class="filters__item">My little ponny</h3>
      </br>

    <h2 class="filters__title">TEMÁTICA</h2>
      <h3 class="filters__item">San Valentine</h1>
      <h3 class="filters__item">Halloween</h1>
 </br>
    <h2 class="filters__title">MATERIAL</h2>
      <h3 class="filters__item">Poliester</h3>
      <h3 class="filters__item">Felpa</h3>
 </br>
  </section> 

  <section class="products">

    {{#each products}}
    <div class="thumb">
      <a href="/producto/{{ name }}" class="thumb__link">
        <img class="thumb__img" src="{{ img }}" alt="">
        <h4 class="thumb__name">{{ name }}</h4>
        <h4 class="thumb__tam">{{ height }} cm - Alto</h4>
        <h4>${{price}}</h4>
        <h4>{{rating}}</h4>
        <button class="thumb__button">Añadir al carrito</button>
      </a>
    </div>
    {{/each}}
  </section>
</main>

